<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/placeImage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_bird_circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/placeName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="9dp"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:id="@+id/birdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@color/transparent"
        app:layout_constraintBottom_toBottomOf="@id/placeImage"
        app:layout_constraintLeft_toLeftOf="@id/placeImage"
        app:layout_constraintRight_toRightOf="@id/placeImage"
        app:layout_constraintTop_toTopOf="@id/placeImage"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/birdName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/placeImage"
        app:layout_constraintLeft_toLeftOf="@id/placeImage"
        app:layout_constraintRight_toRightOf="@id/placeImage"
        app:layout_constraintBottom_toTopOf="@id/latinName"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginTop="7dp"
        />
    <TextView
        android:id="@+id/latinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/birdName"
        app:layout_constraintLeft_toLeftOf="@id/birdName"
        app:layout_constraintRight_toRightOf="@id/birdName"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_marginTop="3dp"/>
    <TextView
        android:id="@+id/birdChance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/latinName"
        app:layout_constraintLeft_toLeftOf="@id/latinName"
        app:layout_constraintRight_toRightOf="@id/latinName"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:layout_marginTop="3dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>